<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cineverse</title>

    <head rel="stylesheet" href="/css/style.css">
        <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet">

    </head>

    <body>
        <header class="header">
            <div class="header__logo"> Cineverse </div>
            <div class="header__search">
                <form action="/ma" method="POST">
                    <input type="text" name="search" placeholder="Search the movie" required>
                    <input type="submit" value="Search" />

                </form>


            </div>
        </header>
        <div class="wrapper">
            <div class="movies">
                <% moviearticle.forEach(function(moviearticle,index) { %>
                    <a href="/singlemoviearticle/<%- moviearticle.id %>" class="movie__card">
                    
                        <!-- <img src ="<%- moviearticle.poster_path%>" alt="<%- moviearticle.title%>"> -->
                        <h2>
                            <%- moviearticle.title%>
                        </h2>
                        <p>
                            <%- moviearticle.overview%>
                        </p>
                    </a>



                    <%  }) %>
            </div>
        </div>
    </body>





</html>